package game;

import java.util.ArrayList;
import java.util.Iterator;

public class GameMaster {
	private ArrayList<Player> players = new ArrayList<Player>();
	private Player currentPlayer;
	private Player winner;
	
	public void setCurrentPlayer(Player player) {
		this.currentPlayer = player;
	}
	
	public void addPlayer(Player player) {
		players.add(player);
	}

	public void nextPlayer() {
		int currentPlayerIndex = players.indexOf(currentPlayer);
		if(currentPlayerIndex + 1 <=3) {
			this.currentPlayer = players.get(currentPlayerIndex + 1);			
		}else {
			this.currentPlayer = players.get(0);
		}
	}
	
	public int calculateScore(Player player) {
		return 1;
	}
	
	public void checkScoreEveryPlayerEachTurn() {
		for(Iterator<Player> i = this.players.iterator(); i.hasNext();) {
			Player playerToCheck = i.next();
			int score = this.calculateScore(playerToCheck);
			if(score < 21) {
				continue;
			}else if (score == 21) {
				this.winner = playerToCheck;
			}else {
				playerToCheck.setScore(0);
			}
		}
	}
	
	public void declareWinner() {
		//check if there is a winner
		if(this.winner != null) {
			System.out.println("we have a winner");
		}
	}
	
	public static void main(String args[]) {
		double[] diceOneFaces = {20,16,16,16};
		double[] diceTwoFaces = {16,20,16,16};
		double[] diceThreeFaces = {16,16,20,16};
		double[] diceFourFaces = {16,16,16,20};
		Dice diceOne = new Dice(diceOneFaces);
		Dice diceTwo = new Dice(diceTwoFaces);
		Dice diceThree = new Dice(diceThreeFaces);
		Dice diceFour = new Dice(diceFourFaces);
		int output = diceOne.getRandomFace();
		System.out.println(output);
	}
}
